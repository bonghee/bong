#include <iostream>
#include <fstream>
#include <cstdio>
using namespace std;

class vps // 이문제는 배열을 이용하거나 스택이용하면 더 깔끔했을듯
{			
private:
	int result;
public:
	void count(char& s)
	{
		if(result < 0)
		{
			return;
		}
		switch(s){
			case '(':
				result++;
				break;
			case ')':
				result--;
				break;
		}
	}
	void init(int _result) // 이렇게 초기화하는게 맞는지도 모름.. ㅠㅠ
	{
		this->result = _result;
	}
	void chk()
	{
		if(result < 0)
		{
			cout << "NO" << endl;
		}
		else if(result == 0)
		{
			cout << "YES" << endl;
		}
		else
		{
			cout << "NO" << endl;
		}
	}
};
int main()
{
	int testCase;
	freopen("input.txt","r",stdin);
	cin >> testCase;
	while(getchar() != '\n');
	for(int i = 0; i < testCase; i++)
	{
		vps v;
		v.init(0);
		char s;
		s = getchar(); 
		while(s != '\n' && s != EOF)
		{
			v.count(s);
			s = getchar();
		}
		v.chk();
	}
}
